<% include /componets/header.ejs %>
    <div class="col-md-8 col-md-offset-2 article-container">
        <div class="row">
            <div class="ui one cards fluid">
                <div class="card article card-large">
                    <div class="image text-center">
                        <img class="cover" src="http://localhost:3010/article/uploads/<%- article.coverImage %>" />
                    </div>
                    <div class="content">
                        <div class="card-header">
                            <h2 class="title-header"><%- article.title %></h2>
                            <div class="meta">
                                Started on
                                <span class="date"><%- moment.utc(article.dateCreated).format("Do MMM YYYY"); %></span>
                            </div>
                        </div>
                        <div class="body">
                            <p class="description"><%- article.content %></p>
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="category">
                            <i class="tag icon"></i>
                            <span><%- article.category %></span>
                        </div>
                        <div class="author">
                            <i class="user icon"></i>
                            Written by <span><%- article.author %></span>
                        </div>
                        <div class="views">
                            <i class="eye icon"></i>
                             <span><%- article.views %></span> Views
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
</body>
</html>